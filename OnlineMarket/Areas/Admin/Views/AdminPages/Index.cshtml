@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<OnlineMarket.Models.Page>

@{
	ViewData["Title"] = "Danh sách Page";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item">Home</a>
			<span class="breadcrumb-item active">Danh sách Page - Trang @ViewBag.CurrentPage</span>
		</nav>
	</div>
</div>
<div class="card">
	<h2 style="text-align: left; margin-top: 20px; margin-left: 20px;">Quản lý Page</h2>
	<div class="card-body">
		<div class="row m-b-30">
			<div class="col-lg-0"></div>
			<div class="col-lg-4 text-left">
				<a class="btn btn-primary" asp-controller="AdminPages" asp-action="Create"><span>Thêm Page</span></a>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Tên Page</th>
						<th>Trạng thái</th>
						<th>#</th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null)
					{
						foreach (var item in Model)
						{
							<tr>
								<td>@item.PageId</td>
								<td>@item.PageName</td>
								<td>
									@if (item.Published == true)
									{
										<div class="d-flex align-items-center">
											<div class="badge badge-success badge-dot m-r-10"></div>
											<div>Public</div>
										</div>
									}
									else
									{
										<div class="d-flex align-items-center">
											<div class="badge badge-success badge-dot m-r-10"></div>
											<div>Non-public</div>
										</div>
									}
								</td>
								<td>
									<a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPages" asp-action="Details" asp-route-id="@item.PageId">Chi tiết</a>
									<a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@item.PageId">Sửa</a>
									<a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPages" asp-action="Delete" asp-route-id="@item.PageId">Xóa</a>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
			<div aria-label="Page navigation example">
				<ul class="pagination">
					<pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminPages" asp-action="Index" />
				</ul>
			</div>
		</div>
	</div>
</div>