@model OnlineMarket.Models.Role

@{
	ViewData["Title"] = "Chỉnh sửa quyền truy cập";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item">Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
			<span class="breadcrumb-item active">Thông tin quyền truy cập</span>
		</nav>
	</div>
</div>

<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="RoleId" />
	<div class="from-group">
		<div class="form-group col-md-7">
			<label class="col-sm-2 col-form-label">Role Name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
			</div>
		</div>
		<div class="form-group col-md-7">
			<label class="col-sm-2 col-form-label">Description</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" asp-for="Description" placeholder="Description">
			</div>
		</div>
		<div class="form-group col-md-7">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary btn-tone m-r-5">Lưu thay đổi</button>
			</div>
		</div>
	</div>
</form>
