@model OnlineMarket.Models.Role

@{
	ViewData["Title"] = "Xác nhận xóa quyền truy cập";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item">Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
			<span class="breadcrumb-item active">Xác nhận xóa quyền truy cập</span>
		</nav>
	</div>
</div>

<div class="card">
	<div class="card-body">
		<h2>Xác nhận xóa quyền truy cập</h2>
		<div class="table-responsive">
			<table class="product-info-table m-t-20">
				<tbody>
					<tr>
						<td>ID:</td>
						<td class="text-dark font-weight-semibold">@Model.RoleId</td>
					</tr>
					<tr>
						<td>Tên quyền truy cập:</td>
						<td>@Model.RoleName</td>
					</tr>
					<tr>
						<td>Mô tả:</td>
						<td>@Model.Description</td>
					</tr>
					<tr>
						<td>Xác nhận xóa:</td>
						<td>
							<form asp-action="Delete" asp-route-id="@Model.RoleId">
								<input type="hidden" asp-for="RoleId" />
								<input type="submit" value="Xóa" class="btn btn-danger" />
								<a asp-action="Index" class="btn btn-primary btn-tone m-r-5">Quay lại danh sách</a>
							</form>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

